---
// Layout base con estructura HTML semántica completa y SEO optimizado
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import type { SEOData, StructuredData } from '../types';

export interface Props {
  seo?: Partial<SEOData>;
  includeHeader?: boolean;
  includeFooter?: boolean;
  pageClass?: string;
}

const { 
  seo = {}, 
  includeHeader = true, 
  includeFooter = true,
  pageClass = ''
} = Astro.props;

const {
  title = 'Carpena Guitars',
  description = 'Constructor de instrumentos musicales con técnicas tradicionales y materiales de la más alta calidad',
  keywords = ['luthier', 'guitarras', 'instrumentos musicales', 'personalizado', 'construcción', 'reparación', 'restauración'],
  ogImage = '/images/og-default.jpg',
  canonical,
  structuredData,
  openGraph,
  twitter,
  robots = 'index, follow',
  author = 'Red Fang Luthier',
  language = 'es',
  charset = 'UTF-8',
  viewport = 'width=device-width, initial-scale=1.0',
  themeColor = '#d2691e'
} = seo;

const canonicalURL = canonical || (Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url.href);

// Structured data por defecto para el luthier
const defaultStructuredData: StructuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  'name': 'Carpena Guitars',
  'jobTitle': 'Luthier',
  'description': 'Constructor de instrumentos musicales',
  'url': canonicalURL.toString(),
  'sameAs': [
    'https://instagram.com/carpenaguitars',
    'https://facebook.com/carpenaguitars'
  ],
  'knowsAbout': [
    'Construcción de guitarras',
    'Reparación de instrumentos',
    'Restauración de instrumentos antiguos',
    'Luthería tradicional'
  ],
  'makesOffer': {
    '@type': 'Offer',
    'itemOffered': {
      '@type': 'Product',
      'name': 'Instrumentos musicales artesanales',
      'category': 'Instrumentos musicales'
    }
  }
};

const finalStructuredData = structuredData || defaultStructuredData;
---

<!DOCTYPE html>
<html lang={language} class="scroll-smooth">
  <head>
    <!-- Meta básicos -->
    <meta charset={charset} />
    <meta name="viewport" content={viewport} />
    <meta name="robots" content={robots} />
    <meta name="author" content={author} />
    <meta name="theme-color" content={themeColor} />
    
    <!-- Título y descripción -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(', ')} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={openGraph?.title || title} />
    <meta property="og:description" content={openGraph?.description || description} />
    <meta property="og:type" content={openGraph?.type || 'website'} />
    <meta property="og:url" content={openGraph?.url || canonicalURL} />
    <meta property="og:image" content={openGraph?.image || ogImage} />
    <meta property="og:site_name" content={openGraph?.siteName || 'Carpena Guitars'} />
    <meta property="og:locale" content={openGraph?.locale || 'es_ES'} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content={twitter?.card || 'summary_large_image'} />
    <meta name="twitter:title" content={twitter?.title || title} />
    <meta name="twitter:description" content={twitter?.description || description} />
    <meta name="twitter:image" content={twitter?.image || ogImage} />
    {twitter?.site && <meta name="twitter:site" content={twitter.site} />}
    {twitter?.creator && <meta name="twitter:creator" content={twitter.creator} />}
    
    <!-- Favicon y iconos -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Preload de recursos críticos para evitar layout shift -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" as="style" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" media="print" onload="this.media='all'" />
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" /></noscript>
    
    <!-- DNS prefetch para recursos externos -->
    <link rel="dns-prefetch" href="//www.google-analytics.com" />
    
    <!-- Structured Data JSON-LD -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify(finalStructuredData)} />
    
    <!-- View Transitions para navegación suave -->
    <ViewTransitions fallback="animate" />
    
    <!-- Estilos para transiciones muy sutiles -->
    <style>
      /* Transición global muy sutil - solo fade */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 600ms;
        animation-timing-function: cubic-bezier(0.23, 1, 0.32, 1);
      }
      
      ::view-transition-old(root) {
        animation-name: ultra-subtle-fade-out;
      }
      
      ::view-transition-new(root) {
        animation-name: ultra-subtle-fade-in;
      }
      
      @keyframes ultra-subtle-fade-out {
        0% {
          opacity: 1;
          transform: translateY(0);
        }
        100% {
          opacity: 0;
          transform: translateY(-3px);
        }
      }
      
      @keyframes ultra-subtle-fade-in {
        0% {
          opacity: 0;
          transform: translateY(3px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      /* Prevenir layout shift durante transiciones */
      ::view-transition-group(root) {
        animation-timing-function: cubic-bezier(0.23, 1, 0.32, 1);
      }
      
      /* Mantener dimensiones durante transición */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        width: 100%;
        height: 100%;
        object-fit: cover;
        mix-blend-mode: normal;
      }
      
      /* Elementos fijos durante transición */
      header, footer {
        view-transition-name: none;
      }
      
      /* Respeto por prefers-reduced-motion */
      @media (prefers-reduced-motion: reduce) {
        ::view-transition-old(root),
        ::view-transition-new(root) {
          animation-duration: 150ms;
          animation-timing-function: ease;
        }
        
        @keyframes ultra-subtle-fade-out {
          0% { opacity: 1; transform: none; }
          100% { opacity: 0; transform: none; }
        }
        
        @keyframes ultra-subtle-fade-in {
          0% { opacity: 0; transform: none; }
          100% { opacity: 1; transform: none; }
        }
      }
    </style>
    
    <!-- Generador -->
    <meta name="generator" content={Astro.generator} />
  </head>
  
  <body class={`bg-pure-white text-almost-black font-sans antialiased min-h-screen flex flex-col ${pageClass}`}>
    <!-- Skip to main content para accesibilidad -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-ochre-600 text-pure-white px-4 py-2 rounded-md font-medium z-50 focus:outline-none focus:ring-2 focus:ring-ochre-500 focus:ring-offset-2"
    >
      Saltar al contenido principal
    </a>
    
    <!-- Header -->
    {includeHeader && <Header />}
    
    <!-- Contenido principal -->
    <main id="main-content" class="flex-1 min-h-[calc(100vh-theme(spacing.16)-theme(spacing.20))]">
      <slot />
    </main>
    
    <!-- Footer -->
    {includeFooter && <Footer />}
    
    <!-- Scripts de analytics (preparado para futuro) -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script> -->
  </body>
</html>