---
// Footer con enlaces de navegación e información de contacto
import type { NavigationItem } from '../../types';

// Enlaces de navegación para el footer
const footerNavigation: NavigationItem[] = [
  { label: 'Inicio', href: '/' },
  { label: 'Trabajos', href: '/works' },
  { label: 'Servicios', href: '/services' },
  { label: 'Acerca de', href: '/about' },
  { label: 'Contacto', href: '/contact' }
];

// Enlaces de redes sociales (preparados para futuro)
const socialLinks = [
  { 
    name: 'Instagram', 
    href: '#', 
    icon: 'instagram',
    ariaLabel: 'Seguir en Instagram'
  },
  { 
    name: 'Facebook', 
    href: '#', 
    icon: 'facebook',
    ariaLabel: 'Seguir en Facebook'
  },
  { 
    name: 'YouTube', 
    href: '#', 
    icon: 'youtube',
    ariaLabel: 'Ver canal de YouTube'
  }
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-dark-light border-t border-zinc-800 mt-auto">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Información de la marca -->
      <div class="lg:col-span-2">
        <h3 class="text-2xl font-bold text-accent mb-4">Red Fang Luthier</h3>
        <p class="text-zinc-300 mb-4 max-w-md">
          Constructor artesanal de instrumentos musicales con más de una década de experiencia. 
          Cada instrumento es una obra única creada con técnicas tradicionales y materiales de la más alta calidad.
        </p>
        <div class="space-y-2 text-sm text-zinc-400">
          <p>
            <span class="font-medium">Email:</span> 
            <a href="mailto:info@redfangluthier.com" class="text-accent hover:text-accent-light transition-colors duration-200">
              info@redfangluthier.com
            </a>
          </p>
          <p>
            <span class="font-medium">Teléfono:</span> 
            <a href="tel:+34600123456" class="text-accent hover:text-accent-light transition-colors duration-200">
              +34 600 123 456
            </a>
          </p>
          <p>
            <span class="font-medium">Horario:</span> 
            Lunes a Viernes: 9:00 - 18:00
          </p>
        </div>
      </div>

      <!-- Enlaces de navegación -->
      <div>
        <h4 class="text-lg font-semibold text-light mb-4">Navegación</h4>
        <nav aria-label="Enlaces del pie de página">
          <ul class="space-y-2">
            {footerNavigation.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-zinc-300 hover:text-accent transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-dark-light rounded-md px-1 py-1"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Redes sociales -->
      <div>
        <h4 class="text-lg font-semibold text-light mb-4">Síguenos</h4>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="text-zinc-400 hover:text-accent transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-dark-light rounded-md p-2"
              aria-label={social.ariaLabel}
            >
              <!-- Iconos SVG simples para redes sociales -->
              {social.icon === 'instagram' && (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.251 14.894 3.76 13.743 3.76 12.446s.49-2.448 1.366-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.875.875 1.366 2.026 1.366 3.323s-.49 2.448-1.366 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.83-9.758c-.807 0-1.458-.651-1.458-1.458s.651-1.458 1.458-1.458 1.458.651 1.458 1.458-.651 1.458-1.458 1.458zM12.017 7.155c-2.692 0-4.831 2.139-4.831 4.831s2.139 4.831 4.831 4.831 4.831-2.139 4.831-4.831-2.139-4.831-4.831-4.831z" clip-rule="evenodd" />
                </svg>
              )}
              {social.icon === 'facebook' && (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                </svg>
              )}
              {social.icon === 'youtube' && (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Línea divisoria y copyright -->
    <div class="border-t border-zinc-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-zinc-400 text-sm">
          © {currentYear} Red Fang Luthier. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a 
            href="/privacy" 
            class="text-zinc-400 hover:text-accent text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-dark-light rounded-md px-1 py-1"
          >
            Política de Privacidad
          </a>
          <a 
            href="/terms" 
            class="text-zinc-400 hover:text-accent text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-dark-light rounded-md px-1 py-1"
          >
            Términos de Uso
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>