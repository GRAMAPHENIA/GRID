---
// Componente de servicios del luthier
import type { Service } from '../../types/service';

export interface Props {
  services: Service[];
  title?: string;
  description?: string;
}

const { 
  services, 
  title = "Servicios Especializados",
  description = "Técnicas tradicionales de luthería con más de 15 años de experiencia"
} = Astro.props;

// Función para obtener el icono SVG según el tipo
function getServiceIcon(iconType: string) {
  const icons = {
    construction: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
    </svg>`,
    repair: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>`
  };
  return icons[iconType] || icons.construction;
}
---

<section class="py-12 md:py-16 px-4">
  <div class="max-w-6xl mx-auto">
    
    <!-- Encabezado de sección -->
    {(title || description) && (
      <div class="text-center mb-12 md:mb-16">
        {title && (
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-almost-black mb-4 md:mb-6">
            {title}
          </h2>
        )}
        {description && (
          <p class="text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
            {description}
          </p>
        )}
      </div>
    )}

    <!-- Grid de servicios -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      {services.map((service) => (
        <article class="bg-neutral-50 rounded-2xl p-6 md:p-8 border border-neutral-200 hover:shadow-lg transition-shadow duration-300">
          
          <!-- Icono del servicio -->
          <div class="w-16 h-16 bg-ochre-100 rounded-xl flex items-center justify-center mb-6">
            <div class="w-8 h-8 text-ochre-600" set:html={getServiceIcon(service.icon)} />
          </div>

          <!-- Contenido del servicio -->
          <div class="space-y-4">
            <h3 class="text-xl md:text-2xl font-bold text-almost-black">
              {service.name}
            </h3>
            
            <p class="text-neutral-600 leading-relaxed">
              {service.description}
            </p>

            <!-- Tags del servicio -->
            {service.tags && service.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mt-4">
                {service.tags.map((tag) => (
                  <span class="px-3 py-1 bg-ochre-100 text-ochre-700 text-xs font-medium rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )}

            <!-- Precio y tiempo estimado -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between pt-4 mt-6 border-t border-neutral-200">
              {service.priceRange && (
                <div class="mb-2 sm:mb-0">
                  <span class="text-sm text-neutral-500">Desde</span>
                  <span class="text-lg font-semibold text-almost-black ml-1">
                    €{service.priceRange.min}
                  </span>
                </div>
              )}
              
              {service.duration && (
                <div class="text-sm text-neutral-500">
                  <span class="font-medium">Tiempo:</span> {service.duration}
                </div>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Call to action -->
    <div class="text-center mt-12 md:mt-16">
      <p class="text-neutral-600 mb-6 text-base md:text-lg">
        ¿Necesitas más información sobre algún servicio?
      </p>
      <a 
        href="/contact" 
        class="inline-flex items-center gap-2 px-6 md:px-8 py-3 bg-almost-black text-pure-white font-semibold rounded-full hover:bg-neutral-800 transition-colors duration-300 text-sm md:text-base focus:outline-none focus:ring-4 focus:ring-neutral-300"
        aria-label="Contactar para consultar servicios"
      >
        Consultar Servicios
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>