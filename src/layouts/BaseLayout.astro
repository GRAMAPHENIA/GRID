---
// Layout base con estructura HTML semántica completa y SEO optimizado
import '../styles/global.css';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import type { SEOData, StructuredData } from '../types';

export interface Props {
  seo?: Partial<SEOData>;
  includeHeader?: boolean;
  includeFooter?: boolean;
  pageClass?: string;
}

const { 
  seo = {}, 
  includeHeader = true, 
  includeFooter = true,
  pageClass = ''
} = Astro.props;

const {
  title = 'Red Fang Luthier',
  description = 'Constructor artesanal de instrumentos musicales con técnicas tradicionales y materiales de la más alta calidad',
  keywords = ['luthier', 'guitarras', 'instrumentos musicales', 'artesanal', 'construcción', 'reparación', 'restauración'],
  ogImage = '/images/og-default.jpg',
  canonical,
  structuredData,
  openGraph,
  twitter,
  robots = 'index, follow',
  author = 'Red Fang Luthier',
  language = 'es',
  charset = 'UTF-8',
  viewport = 'width=device-width, initial-scale=1.0',
  themeColor = '#d2691e'
} = seo;

const canonicalURL = canonical || (Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url.href);

// Structured data por defecto para el luthier
const defaultStructuredData: StructuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  'name': 'Red Fang Luthier',
  'jobTitle': 'Luthier',
  'description': 'Constructor artesanal de instrumentos musicales',
  'url': canonicalURL.toString(),
  'sameAs': [
    'https://instagram.com/redfangluthier',
    'https://facebook.com/redfangluthier'
  ],
  'knowsAbout': [
    'Construcción de guitarras',
    'Reparación de instrumentos',
    'Restauración de instrumentos antiguos',
    'Luthería tradicional'
  ],
  'makesOffer': {
    '@type': 'Offer',
    'itemOffered': {
      '@type': 'Product',
      'name': 'Instrumentos musicales artesanales',
      'category': 'Instrumentos musicales'
    }
  }
};

const finalStructuredData = structuredData || defaultStructuredData;
---

<!DOCTYPE html>
<html lang={language} class="scroll-smooth">
  <head>
    <!-- Meta básicos -->
    <meta charset={charset} />
    <meta name="viewport" content={viewport} />
    <meta name="robots" content={robots} />
    <meta name="author" content={author} />
    <meta name="theme-color" content={themeColor} />
    
    <!-- Título y descripción -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(', ')} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={openGraph?.title || title} />
    <meta property="og:description" content={openGraph?.description || description} />
    <meta property="og:type" content={openGraph?.type || 'website'} />
    <meta property="og:url" content={openGraph?.url || canonicalURL} />
    <meta property="og:image" content={openGraph?.image || ogImage} />
    <meta property="og:site_name" content={openGraph?.siteName || 'Red Fang Luthier'} />
    <meta property="og:locale" content={openGraph?.locale || 'es_ES'} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content={twitter?.card || 'summary_large_image'} />
    <meta name="twitter:title" content={twitter?.title || title} />
    <meta name="twitter:description" content={twitter?.description || description} />
    <meta name="twitter:image" content={twitter?.image || ogImage} />
    {twitter?.site && <meta name="twitter:site" content={twitter.site} />}
    {twitter?.creator && <meta name="twitter:creator" content={twitter.creator} />}
    
    <!-- Favicon y iconos -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Preload de recursos críticos -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- DNS prefetch para recursos externos -->
    <link rel="dns-prefetch" href="//www.google-analytics.com" />
    
    <!-- Structured Data JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(finalStructuredData)} />
    
    <!-- Generador -->
    <meta name="generator" content={Astro.generator} />
  </head>
  
  <body class={`bg-dark text-light font-sans antialiased min-h-screen flex flex-col ${pageClass}`}>
    <!-- Skip to main content para accesibilidad -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-accent text-dark px-4 py-2 rounded-md font-medium z-50 focus:outline-none focus:ring-2 focus:ring-accent-light"
    >
      Saltar al contenido principal
    </a>
    
    <!-- Header -->
    {includeHeader && <Header />}
    
    <!-- Contenido principal -->
    <main id="main-content" class="flex-1" role="main">
      <slot />
    </main>
    
    <!-- Footer -->
    {includeFooter && <Footer />}
    
    <!-- Scripts de analytics (preparado para futuro) -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script> -->
  </body>
</html>